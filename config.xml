<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "br.com.mauricioramos.mobileapp"
        version = "1.0.0">

<name>Mobile App</name>

<description>
	Aplicativo que faz acesso ao Sistema Imobiliário Mobile v2.0.
	Em desenvolvimento e testes.
</description>

<author href="http://www.mauricioramos.com.br" email="contato@mauricioramos.com.br">
	Maurício Ramos da Silva 
</author>

<feature name="http://api.phonegap.com/1.0/device" />
<feature name="http://api.phonegap.com/1.0/media" />

<gap:platform name="ios" />
<gap:platform name="android" />
<gap:platform name="winphone" />

<!--for android-->
<gap:splash src="splash/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
<gap:splash src="splash/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
<gap:splash src="splash/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
<gap:splash src="splash/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />

<!-- X-Services PhoneGap Build plugins -->
<gap:plugin name="nl.x-services.plugins.socialsharing" />
<param name="URL_SCHEME" value="xpluginsdemo" />
</gap:plugin>

<!-- PhoneGap plugins -->
<gap:plugin name="org.apache.cordova.network-information"/>
<gap:plugin name="org.apache.cordova.dialogs" version="0.2.2" />

<preference name="show-splash-screen-spinner" value="true" />

<access origin="*"/>
</widget>